{
  "name": "monorepo-system",
  "devDependencies": {
    "@changesets/cli": "catalog:",
    "@types/node": "catalog:",
    "lefthook": "catalog:",
    "prettier": "catalog:",
    "prettier-plugin-tailwindcss": "catalog:",
    "syncpack": "catalog:",
    "tsx": "catalog:",
    "turbo": "catalog:",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@9.5.0",
  "scripts": {
    "build": "turbo run build",
    "build-storybook": "turbo run build-storybook",
    "clean": "turbo run clean && rm -rf node_modules",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,md}\"",
    "lint": "turbo run lint",
    "lint:check": "turbo run lint:check",
    "packages:changeset": "changeset",
    "packages:release": "turbo run build && changeset publish",
    "packages:version": "changeset version",
    "storybook": "turbo run storybook",
    "test": "turbo run test",
    "test:cov": "turbo run test:cov",
    "test:cov-total": "turbo run test:cov && tsx scripts/coverage-total.ts",
    "ui": "pnpm --filter @felipegangrel/core-ui ui"
  }
}
